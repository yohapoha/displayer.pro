@import "colors.styl"

body {
    margin 0
    padding 0
    color $text_color
    font-family: 'Comfortaa', cursive;
    font-family: 'Open Sans', sans-serif;
    font-size 14px
}
a,
a:visited,
a:active {
    text-decoration none
    color $link_color
}
.menu,
.menu:visited,
.menu:active {
    color $text_color
}
.link:hover {
    text-decoration underline
}
.separator {
    background-color $border_color
    width 100%
    height 1px
    margin 30px 0
    float left 
}