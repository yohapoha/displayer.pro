@import "colors.styl"

.shop {
    width 100%
    float left
}
.shop-group {
    width 100%
    padding 30px 0
    border-bottom 1px solid $border_color
    float left
}
.shop-group-info {
    width 250px
    padding 30px
    border-right 1px solid $border_color
    float left
}
.shop-group-info__brand {
    width 100%
    font-size 36px
    text-align center
    float left
}
.shop-group-info__comparsion {
    width 100%
    text-align center
    float left
}
.shop-group-info-filter {
    width 100%
    float left
}
.shop-group-info-filter-block {
    width 100%
    padding 10px 0
    margin 5px 0
    border-radius 7px
    cursor pointer
    float left
    transition .3s
}
.shop-group-info-filter-block:hover {
    background-color $menu_hover_color
}
.shop-group-info-filter-block__name {
    width 100%
    text-align center
    float left
}
.shop-group-info-filter-block__value {
    @extend .shop-group-info-filter-block__name
    margin-top 5px
    font-size 18px
    color $link_color
}