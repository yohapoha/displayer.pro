@import "colors.styl"

.shop {
    width 100%
    float left
}
.shop-group {
    width 100%
    padding 30px 0
    border-bottom 1px solid $border_color
    float left
}
.shop-group-info {
    width 250px
    padding 30px
    border-right 1px solid $border_color
    float left
}
.shop-group-info__brand {
    width 100%
    font-size 36px
    text-align center
    float left
}
.shop-group-info__comparsion {
    width 100%
    text-align center
    float left
}
.shop-group-info-filter {
    width 100%
    float left
}
.shop-group-info-filter-block {
    width 100%
    padding 10px 0
    margin 5px 0
    border-radius 7px
    cursor pointer
    float left
    transition .3s
}
.shop-group-info-filter-block:hover {
    background-color $menu_hover_color
}
.shop-group-info-filter-block__name {
    width 100%
    text-align center
    float left
}
.shop-group-info-filter-block__value {
    @extend .shop-group-info-filter-block__name
    margin-top 5px
    font-size 18px
    color $link_color
}

.element {
    width 260px
    margin 50px
    border-right 1px solid $border_color
    float left
}
.element-phone {
    width 88px
    height 158px
    border 1px solid $element_border_color
    border-radius 10px
    float left
}
.element-phone__speaker {
    background-color $element_border_color
    width 18px
    height 1px
    margin 20px 35px 10px
    float left
}
.element-phone-info {
    width 100%
    height 87px
    float left
}
.element-phone-info__name {
    display table
    width 100%
    height 57px
}
.element-phone-info__name_value {
    display table-cell
    text-align center
    vertical-align: middle;
}
.element-phone-info-existence {
    width 100%
    height 30px
    float left
}
.element-phone-info-existence__value {
    width 100%
    height 15px
    margin-bottom 5px
    font-size 12px
    text-align center
    color $text_grey_color
    float left
}
.element-phone-info-existence-quantity {
    width 70px
    height 10px
    margin 0 9px
    float left
}
.element-phone-info-existence-quantity__circle {
    background-color $quantity_color
    width 8px
    height 8px
    margin 3px 3px 0
    border-radius 4px
    float left
}
.element-phone-info-existence-quantity__circle_free {
    @extend .element-phone-info-existence-quantity__circle
    background-color $quantity_free_color
}
.element-phone__button {
    background-color $background_color
    width 16px
    height 16px
    border 1px solid $element_border_color
    border-radius 10px
    margin 10px 35px
    float left
}
.element-info {
    background-color red
    width 149px
    height 110px
    margin 10px
    float left
}
.element-info__value {
    width 100%
    text-align center
    font-size 12px
    float left
}
.element-info__price {
    @extend .element-info__value
    margin 10px 0
    font-size 14px
}
.element__buy {
    display block
    padding 5px 15px
    margin-left 30px
    border-radius 5px
    color $text_color
    transition .2s
    float left
}