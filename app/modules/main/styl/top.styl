@import "colors.styl"

.top {
    width 100%
    border-bottom 1px solid $border_color
    float left
}
.top-logo {
    width 334px
    height 60px
    margin 30px 50px
    float left
}
.top-logo__image {
    background-image url("/img/logo.png");
    width 334px
    height 60px
}
.top-menu {
    width 100%
    margin-bottom 10px
    float left
}
.top-menu__button {
    background-color $menu_button_color
    padding 5px 15px
    margin-left 30px
    border-radius 5px
    color $menu_button_text_color
    transition .2s
    float left
}
.top-menu__button:hover {
    background-color $menu_button_hover_color
}
.top-menu__button_select {
    @extend .top-menu__button
    background-color $menu_button_select_color
    color $menu_button_select_text_color
}
.top-menu__button_select:hover {
    background-color $menu_button_select_hover_color
    color $text_hover_color
}